{% extends 'base.html.twig' %}
{% block body %}
    {% trans_default_domain 'trans' %}
    <div class="modal-header">
        <h4 class="modal-title" >  {{ 'password.get_password_resetLink'|trans }}</h4> 
    </div>
    <div class="modal-body">
        <form class="reset-layout  " method="post" action="{{ path('forgot_password') }}"> 
            {{ form_start(forgotPasswordForm, {'method': 'POST', 'action': path('send-reset-link'), 'attr':{'class': 'reset-layout' } }) }}
            {% for warning in app.flashes('resetError') %}
                <div class="resetError alert alert-danger">
                    {{ warning }}
                </div>
            {% endfor %}  
            <h3>    {{ 'password.get_reset_mail_page_description'|trans }} </h3> 
            <br>
            <div class="row">  
                <div class="form-group    ">
                    {{ form_label(forgotPasswordForm._username,'', {'label_attr': {'class': 'col-lg-2 control-label required'} }) }}
                    <div class="col-lg-10">
                        {{ form_widget(forgotPasswordForm._username, {'attr': {'class': 'reset-username form-control', 'value': username } }) }}

                    </div>
                </div>   
            </div> 

            <div class="modal-footer">
                <a type="button"  data-dismiss="modal" class="btn btn-default"  >{{ 'cancel'|trans }} </a>
                <button type="submit" class="btn btn-default ">
                    {{ 'submit'|trans  }}
                </button>
            </div>  
            {{ form_end(forgotPasswordForm) }}
    </div>
{% endblock %}